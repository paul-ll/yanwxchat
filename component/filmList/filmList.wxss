@import "../../comm/style/animation.wxss";

.film {
    box-sizing: border-box;
    width: 720rpx;
    padding: 10rpx 15rpx;
 
    box-shadow: 0 0 40rpx #f4f4f4 inset;
}

.film-item {

   display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
  
    width: 720rpx;
    height:250rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    border: 1px solid #e4e4e4;
    box-shadow: 0 20rpx 40rpx #eee;
    overflow: hidden;
    animation: fadeIn 1s;
}

.film-cover, .film-cover-img {
    width: 150rpx;
    height: 200rpx;
    overflow:hidden;

}

.film-cover {
    width:150rpx;
    height:200rpx;
    position: relative;
    overflow: hidden;
    margin:25rpx 30rpx 0 30rpx;
}

.film-rating {
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50rpx;
    padding-right: 20rpx;
    font-size: 12px;
    text-align: right;
    line-height: 50rpx;
    background-color: rgba(0, 0, 0, .65);
    color: #fff;
}

.file-intro {
    display:flex;
}

.film-title {
float:left;
width:420rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font:26rpx/38rpx "微软雅黑";
    margin-top:20rpx;
}

.film-tag {

    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.film-tag-item {
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}

.loading-tip {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ccc;
}

.file-main{
    width:510rpx;
    height:250rpx;
    overflow:hidden;

}
.file-start{
    float:left;
    width:70rpx;
    height:28rpx;
    color:#fff;
    background:#9999ff;
    font:18rpx/28rpx "微软雅黑";
    margin:25rpx 10rpx 0 0;
    text-align:center;
}
.file-address{
     font:26rpx/38rpx "微软雅黑";
}
.file-pice{
    color:#ff6666;
    font:20rpx/46rpx "微软雅黑";
    margin-bottom:50rpx;
}
.no-price{
   color:#666;
    font:20rpx/46rpx "微软雅黑";
}
.file-time{
    color:#999;
    font:18rpx/42rpx "微软雅黑";
}
.file-address{
    color:#999;
    font:18rpx/42rpx "微软雅黑";
}