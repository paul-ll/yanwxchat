@import "../../component/filmList/filmList.wxss";
@import "../../component/nullTip/nullTip.wxss";
.show{display:block;line-height:200rpx;padding:0 16px;}
.hidden{display:none;text-align:center;line-height:200px;}
.search-area {
    position: relative;
    margin: 30rpx;
}
.search-txt {
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-family: "微软雅黑";
}

.search-btn {
    position: absolute;
    z-index: 11;
    top: 0;
    right: 0;
    height: 80rpx;
    width: 120rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}

.search-btn::after{
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
}




.swiper-tab{  
    display:flex;
    justify-content:space-around;
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 20%;  
    color: #777777;  
}  
.on{ color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;}  
  
.swiper-box{ display: block; width: 100%; }  
.swiper-box view{  
    text-align: left;  
}


.swiper_item{
    height:101px;
    display:flex;
    background: rgba(238,238,238,0.80);
    margin-top:10px;
}
.my_img{
    width:75px;
    height:101px;
    display:block;
    margin:0 10px 0 0;
}
.my_text {
	width:90%;
	height: 28rpx;
	margin-top:20rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #000000;
    line-height: 28rpx;
    font-weight:600;
}
.my_time{
    font-family: PingFangSC-Regular;
font-size: 14px;
color: #FF5252;
line-height: 14px;
margin-top:10px;

}
.item_right{
width:85%;
	position:relative;
}
.my_date{
	font-family: PingFangSC-Regular;
	font-size: 12px;
	color: #888888;
	line-height: 12px;
	position:absolute;
	bottom:25px;
	left:0;
}
.my_address{
	width:90%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
    font-family: PingFangSC-Regular;
	font-size: 12px;
	color: #888888;
	line-height: 12px;
	position:absolute;
	bottom:0;
	left:0;
}
.user_flex{
	display:flex;
	height:56px;
	margin:8px 0;
    border-bottom: 1rpx solid #E5E5E5;
}
.user_img{
	width:40px;
	height:40px;
border-radius: 50%;
margin-right:10px;
}
.user_name{
	display:flex;
}
.user_text{
	font-family: PingFangSC-Regular;
font-size: 14px;
line-height:20px;
height:20px;
color: #000000;
font-weight:700;
margin-right:5px;
}
.user_info{
	width:100%;
	
}
.user_icon{
	width:18px;
	height:18px;
	border-radius: 50%;
	box-shadow: 0 1px 2px 0 #CFAF7B;
}
.user_intro{
    width:100%;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
	font-family: PingFangSC-Regular;
    font-size: 12px;
    margin-top:5px;
    color: #999999;
    line-height:16px;
}