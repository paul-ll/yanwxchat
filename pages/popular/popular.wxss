@import "../../component/filmList/filmList.wxss";
@import "../../component/message/message.wxss";
.all_page{
  background: rgba(238,238,238,0.80);

}
.headerPop{
    position: fixed;
    top: 0;
    right: 0;
    z-index: 999;
    width:100%;
    display:flex;
    justify-content:space-between;
    padding:20rpx 0;
     background:#eee;
}
.changeCity{
    width:20%;
    display:block;
    height:52rpx;
   font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #000;
  display:flex;
 justify-content:space-around;
}

.select_img{
  width:16rpx;
  height:8rpx;
  margin-top:10rpx;
}
.picker{
    line-height:60rpx;
    color: #bfbfbf;
}
.search-bar {
    box-sizing: border-box;
    position: fixed;
    top: 0;
    right: 0;
    z-index: 999;
    width: 80%;
    height: 80rpx;
    padding: 10rpx;
     line-heiht:60rpx!important;
}

.search-txt {
    display: inline-block;
    width: 100%;
    height: 60rpx;
    color: #bfbfbf;
    line-height:60rpx;
    background-color: #fff;
    background-image: url(data:image/png;base64,);
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-size: 50rpx;
    border-radius: 8rpx;
    text-indent:80rpx;
}

.banner {
    width: 750rpx;
    height: 300rpx;
    background-color: #eee;
    animation: fadeIn 1.8s;
    margin-top:95rpx;
}

.banner-item {
    width: 750rpx;
    height: 300rpx;
}





.xscroll_bar {
    margin-top:80rpx;
  overflow-y: hidden;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  display: flex;
  background: #ececec;
  
  
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menu_item {

  text-align: center;
  font-size: 30rpx;
  color: #7c7c7c;
  display: inline-block;
 
}

.menu_item_border {
  border-left: 1rpx solid #d3d3d3;
   padding: 0 30rpx;
  
}

/*目前暂时不支持伪类，边距的去除只能动态判断*/

.xscroll_bar .active {
  color: #1f1f1f;
  background: #fff;
  
}

.menu_content {
  padding: 30rpx;
}

.menu_panel {
  margin: 20rpx 20rpx 20rpx 0;
  border-left: 10rpx solid #ccc;
  font-size: 26rpx;
}

.menu_panel>view {
  padding: 30rpx;
  background: #ececec;
  border-radius: 0 20rpx 20rpx 0;
}

.banner_list{

  display:flex;
   flex-wrap: wrap;
  justify-content:space-around;
  margin:15px;
  padding-bottom:15px;
  background:#fff;
}
.banner_li{
  width:25%;
  text-align:center;
  margin-top:21px;
}
.banner_img{
  width:42px;
  height:42px;
  display:block;
  margin:0 auto;
}
.banner_name{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  margin-top:3px;
}
.event_info{
  background:#fff;
  padding:16px;
}
.event_title{
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  line-height: 16px;
  text-align:center;
  font-weight:600;
}
.event_text{
  text-align:center;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #999999;
  line-height: 12px;
  margin-top:5px;
}
.event_main{
  margin:16px 0;
  border-bottom:0.5px solid #d8d8d8;
}
.event_img{
  width:100%;
  height:173px;
}
.event_body{
  display:flex;
  justify-content:space-between;
  margin:10px 0;
}
.event_left{
  width:70%;
}
.event_name{
  width:100%;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  line-height: 28rpx;
  font-weight:600;
  overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.tag_text{
  display:inline-block;
  margin-right:10px;
  margin-top:10px;
padding:4px 10px;
 
  
  background: #EEEEEE;
border-radius: 2px;
}
.event_right{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #FF5252;
  line-height: 28rpx;
}
.event_ticket{
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #999999;
  line-height: 12px;
  text-decoration:line-through;
}
.event_time{
  font-family: PingFangSC-Regular;
font-size: 12px;
color: #888888;
line-height: 12px;
margin:10px 0;
}
.event_address{
width:70%;
overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
  font-family: PingFangSC-Regular;
font-size: 12px;
color: #888888;
line-height: 12px;
}
.event_last{
   display:flex;
  justify-content:space-between;
  margin-bottom:10px;
}
.event_long{
  font-family: PingFangSC-Regular;
font-size: 12px;
color: #888888;
line-height: 12px;
}
.thumb_box{
  display:inline-block;

}
.thumb_img{
  width:160px;
  height:86px;
}
.loading{  
  padding: 10rpx;  
  text-align: center;  
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;  

  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}  
.complete{
  margin:0 auto;
  text-align:center;
}