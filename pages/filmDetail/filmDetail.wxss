@import "../../comm/style/animation.wxss";
@import "../../component/message/message.wxss";
.fd-hd {
    position: relative;
    width: 100%;
    height: 400rpx;
    display: flex;
  
    align-content: center;
    overflow: hidden;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 400rpx;
    background-color: rgba(0, 0, 0, .6);
}

.fd-hd-bg {
    position: absolute;
    z-index: -2;
    left: 0;
    top: 0;
    width: 100%;
    height: 400rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
    transform: scale(1.2);
}

.fd-favorite {
    box-sizing: border-box;
    position: absolute;
    z-index: 99;
    bottom: 50rpx;
    right: 20rpx;
    width: 160rpx;
    padding: 10rpx 30rpx;
    padding-left: 60rpx;
    font-size: 32rpx;
    line-height: 1;
    border-radius: 30rpx;
    border: 1px solid #fff;
    background-position: 20rpx center;
    background-repeat: no-repeat;
    background-image: url(data:image/png;base64,);
    background-size: 32rpx;
    color: #fff;
    transition: left .3s, color .3s, background-image .3s;
}

.fd-favorite-active {
    right: 20rpx;
    width: 190rpx;
    background-image: url(data:image/png;base64,);
    color: #f4ea2a;
    border: 1px solid #f4ea2a;
}

.fd-favorite-active::before {
    content: '已'
}

.fd-cover {
    z-index: 9999;
    width: 220rpx;
    height: 320rpx;
    margin-top: 40rpx;
    margin-left:30rpx;
    border-radius: 8rpx;
    box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}

.fd-intro {
    z-index: 2;
    width: 320rpx;
    margin-top: 40rpx;
    margin-left: 35rpx;
    color: #fff;
}

.fd-title {
    font:32rpx/50rpx "微软雅黑";
    width:395rpx;
    color:#fff;
}

.fd-intro-txt {
    margin-bottom: 18rpx;
    color: #eee;
}

.fd-data {
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}

.fd-data-item {
    width: 33.33%;
    text-align: center;
}

.fd-data-item {
    border-left: 1px solid #eee;
}

.fd-data-item:first-child {
    border-left: none;
}

.fd-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.fd-data-title {
    color: #999;
}

.fd-bd {
    padding: 0 40rpx 40rpx;
}

.fd-bd-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}

.fd-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.fd-bd-tag {
    display: flex;
}

.fd-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}

.fd-bd-person {
    display: flex;
    width: 100%;
    height: 480rpx;
    overflow-x: scroll;
    overflow-y: hidden;
}

.fd-bd-person-item {
    margin-left: 20rpx;
    text-align: center;
}

.fd-bd-person-item:first-child {
    margin-left: 0;
}

.fd-bd-person-avatar {
    width: 280rpx;
    height: 400rpx;
}

.fd-bd-person-name {
    color: #666;

}

.fd-bd-person-role {
    color: #999
}

.button{
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:80rpx;
    background:red;
    text-align:center;
    line-height:80rpx;
    color:#fff;
}
.footer{
    height:80rpx;
}
.fd-price{
    color:#ff6666;
    font:30rpx/40rpx "微软雅黑";
    position:absolute;
    top:320rpx;
    left:280rpx;
}
.no-price{
    font:30rpx/40rpx "微软雅黑";
    margin-top:185rpx;
}
.fd-time{
    padding-left:75rpx;
    height:110rpx;
    background:#f7f7f7;
}
.fd-time-data{
    padding-top:20rpx;
    font:30rpx/46rpx "微软雅黑";
    color:#000;
}
.fd-time-time{
 margin-top:5rpx;
    font:20rpx/40rpx "微软雅黑";
    color:#999;
}
.fd-address{
    margin-left:75rpx;
    margin-top:15rpx;

}
.fd-address-add{
    margin-top:20rpx;
    font:30rpx/46rpx "微软雅黑";
}
.fd-address-min{
    margin-top:5rpx;
    font:20rpx/40rpx "微软雅黑";
    color:#999;
}


.info .text{
    transition: 1s;
}
.info .text text{
  
    font-size:14px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    transition: 1s;
}
.controlText{
    text-align: center;
}
.controlText text{
    display:inline-block;
    width:28px;
    height:auto;
}
.controlText text:after{
    content:'';
    display: block;
    width:10px;
    height:10px;
    border: 1px solid;
    border-left-width: 0;
    border-top-width: 0;
    transform: rotate(45deg);
}
.down text:after{
    content:'';
    display: block;
    width:10px;
    height:10px;
    border: 1px solid;
    border-left-width: 0;
    border-top-width: 0;
    transform: rotate(-135deg);
}
