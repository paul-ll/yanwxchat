@import "../../component/filmList/filmList.wxss";
@import "../../component/message/message.wxss";
.xscroll_bar {
  overflow-y: hidden;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  display: flex;
  background: #ececec;
  
  justify-content:space-around;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menu_item {
  text-align: center;
  font-size: 30rpx;
  color: #7c7c7c;
  display: inline-block;
  padding: 0 30rpx;
}

.menu_item_border {
  border-left: 1rpx solid #d3d3d3;
   text-align: center;
}

/*目前暂时不支持伪类，边距的去除只能动态判断*/

.xscroll_bar .active {
  color: #1f1f1f;
  background: #fff;
}

.menu_content {
  padding: 30rpx;
}

.menu_panel {
  margin: 20rpx 20rpx 20rpx 0;
  border-left: 10rpx solid #ccc;
  font-size: 26rpx;
}

.menu_panel>view {
  padding: 30rpx;
  background: #ececec;
  border-radius: 0 20rpx 20rpx 0;
}